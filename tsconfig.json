{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "inlineSourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
